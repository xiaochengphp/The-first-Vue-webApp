@import "../../common/stylus/mixin";

.ratingselect
    .rating-type
        padding: 18px 0
        margin: 0 18px
        font-size: 0px
        border-1px(rgba(7,17,27,0.2))
        .block
            display: inline-block
            font-size: 12px
            padding: 8px 12px
            margin-right: 8px
            border-radius: 2px
            color: rgb(77,85,93)
            line-height: 16px
            cursor: pointer
            &.active
                color: #fff
            .count
                font-size: 8px
                margin-left: 2px
            &.positive
                background: rgba(0,160,220,0.2) 
                &.active
                    background: rgb(0,160,220)
            &.negative
                background: rgba(77,85,93,0.2)
                &.active
                    background: rgb(77,85,93)
    .switch
        padding: 12px 18px
        line-height: 24px
        border-bottom: 1px solid rgba(7,17,27,0.1)
        color: rgb(147,153,159)
        font-size: 0px
        cursor: pointer
        &.on
            .icon-check_circle
                color: #00c850
        .icon-check_circle
            display: inline-block
            vertical-align: top
            margin-right: 4px
            font-size: 24px
        .text
            font-size: 12px
            display: inline-block
            vertical-align: top
